<div class="container">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h1 class="text-center mb-0">Listagem de Jogadores</h1>
    </div>

    <div class="card-body">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <%= link_to new_dashboard_player_path, class: 'btn btn-primary mb-2 mb-md-0' do %>
          <i class="bi bi-person-plus-fill me-2"></i>
          Adicionar Jogador
        <% end %>
      </div>

      <div class="table-responsive">
        <table class="table table-hover table-bordered border-light", data-controller="search">
          <thead>
            <tr>
              <th class="text-center" colspan="7">
                <div class="ms-auto">
                  <%= text_field_tag(
                    :search, params[:search], class: 'form-control', placeholder: 'Pesquisar por nome, apelido',
                    autocomplete: 'off', id: 'search', size: 50, data: { action: "input->search#filterPlayers" }
                  ) %>
                </div>
              </th>
            </tr>
            <tr>
              <th class="text-center">##</th>
              <th scope="col">Nome</th>
              <th scope="col">Apelido</th>
              <th scope="col">Camisa</th>
              <th scope="col">Situação</th>
              <th scope="col">Gols</th>
              <th scope="col">Posição</th>
            </tr>
          </thead>
          <tbody>
            <% @players.each do |player| %>
              <tr>
                <td class="text-center">
                  <div class="d-flex justify-content-around align-items-center">
                    <%= link_to dashboard_player_path(player), class: 'btn-link ' do %>
                      <i class="bi bi-eye-fill"></i>
                    <% end %>
                    <%= link_to edit_dashboard_player_path(player), class: 'btn-link' do %>
                      <i class="bi bi-pencil-fill"></i>
                    <% end %>
                  </div>
                </td>
                <td data-search-target="name"><%= player.name %></td>
                <td data-search-target="nickname"><%= player.nickname %></td>
                <td><%= player.shirt_number %></td>
                <td><%= player.status %></td>
                <td><%= player.score_goal %></td>
                <td><%= player.position %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
